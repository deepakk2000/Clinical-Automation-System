<!DOCTYPE html>

<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link href="~/Content/Layout.css" rel="stylesheet" />
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        header {
            background-color:;
            color: #fff;
            padding: 10px;
            text-align: center;
        }

        nav {
            background-color: black;
            padding: 10px;
            text-align: center;
        }

            nav a {
                margin: 0 10px;
                text-decoration: none;
                color: gold;
            }

        #logoutBtn {
            float: right;
            background-color: red;
            color: #fff;
            padding: 8px 16px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        #backBtn {
            background-color: #007bff;
            color: #fff;
            padding: 8px 16px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
            overflow: hidden;
        }

        li {
            float: left;
        }

            li a {
                display: block;
                color: gold;
                text-align: center;
                padding: 16px;
                text-decoration: none;
            }

                li a:hover {
                    background-color: grey;
                }
    </style>
</head>

<body>

    <header>
        
    </header>
  
    <nav>
        <ul>
            <li>
                <b> @Html.ActionLink("Doctors Info", "GetAllDoc", "Patients")</b>
            </li>
            <li>
                <b> @Html.ActionLink("Inbox", "MessageDoctor", "Patients")</b>
            </li>
            <li>
                <b> @Html.ActionLink("Appointment History", "ViewAppointments", "Patients")</b>
            </li>
            <li>
                <b> @Html.ActionLink("View Medicine", "ViewMedicine", "Patients")</b>
            </li>
            <li>
                <b> @Html.ActionLink("Update Info", "UpdatePatient", "Patients")</b>
            </li>
        </ul>
    </nav>


    <script>
        function goBack() {
            window.history.back();
        }

        function logout() {
            alert('Logout clicked!');

        }
    </script>
    <div>
        @RenderBody()
    </div>
    <button id="logoutBtn"><b> @Html.ActionLink("Logout", "Logout", "Login")</b></button>
    <footer>
        <button id="backBtn" onclick="goBack()">Back</button>
    </footer>
</body>


</html>
