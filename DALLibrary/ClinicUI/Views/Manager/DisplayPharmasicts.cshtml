@model IEnumerable<DALLibrary.Domain_Classes.Pharmacist>

@{
    ViewBag.Title = "DisplayPharmasicts";
    Layout = "~/Views/Shared/_Layout_Manager_Pharmacist.cshtml";
}


<h2>DisplayPharmasicts</h2>
<script src="~/Content/SearchScript.js"></script>
<div style="font-family: 'Arial', sans-serif; background-color: #f4f4f4; margin: 0; padding: 20px;">
    <div style="display: flex; flex-wrap: wrap; justify-content: space-between;">

        <table class="table table-striped table-dark">
            <thead>
                <tr>
                    <th scope="col">Pharmacist Id</th>
                    <th scope="col">Name</th>
                    <th scope="col">Email</th>

                    <th scope="col">Password</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model)
                {
                    <tr>
                        <td>@p.PharmacistId</td>
                        <td>@p.Name</td>

                        <td>@p.Email</td>
                        <td>@p.Password</td>
                        <td>
                            <a href="@Url.Action("UpdatePharmacist", "Manager", new { id = p.PharmacistId})" class="btn btn-primary" style="background-color: #007bff; color: #fff; border: 1px solid #007bff; text-decoration: none;">Update</a>
                            <a href="@Url.Action("DeletePharmacist", "Manager", new { id = p.PharmacistId })" class="btn btn-primary" style="background-color: #007bff; color: #fff; border: 1px solid #007bff; text-decoration: none;">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


