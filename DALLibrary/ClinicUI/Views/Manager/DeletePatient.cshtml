@model DALLibrary.Domain_Classes.Patient


@{
    ViewBag.Title = "DeletePatient";
    Layout = "~/Views/Shared/_Layout_Manager_pat.cshtml";
}



<div style="font-family: 'Arial', sans-serif; background-color: #f4f4f4; margin: 0; padding: 20px;">
    <div style="display: flex; flex-wrap: wrap; justify-content: space-between;">
        <h3>Are you sure you want to delete this?</h3>
        <div>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Email)
                </dd>
            </dl>
            @using (Html.BeginForm("DeletePatient", "Manager", FormMethod.Post))
            {
                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <a href="@Url.Action("DisplayPatients", "Manager")" class="btn btn-secondary ml-2">Cancel</a>
                </div>


            }
        </div>


    </div>
</div>

