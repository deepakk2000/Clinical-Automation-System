@model  IEnumerable<DALLibrary.Domain_Classes.Medicine>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_Pharmacist.cshtml";
}


<div style="font-family: 'Arial', sans-serif; background-color: #f4f4f4; margin: 0; padding: 20px;">
    <div style="display: flex; flex-wrap: wrap; justify-content: space-between;">
        <label for="searchQuery">Search by Name:</label>
        <input type="text" id="searchQuery" name="searchQuery"  style="width:200px;" placeholder="Enter medicine name" />

        <table class="table table-striped table-dark">
            <thead >
                <tr >
                    <th scope="col">Medicine ID</th>
                    <th scope="col">Name</th>
                    <th scope="col">Manufacture Date</th>
                    <th scope="col">Expired Date</th>
                    <th scope="col">Discount</th>
                    <th scope="col">Tax</th>
                    <th scope="col">Is Available</th>
                    <th scope="col">Final Price</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var medicine in Model)
                {
                    <tr>
                        <td>@medicine.MedicineId</td>
                        <td>@medicine.MedicineName</td>
                        <td>@medicine.ManufactureDate.ToShortDateString()</td>
                        <td>@medicine.ExpiredDate.ToShortDateString()</td>
                        <td>@medicine.Discount</td>
                        <td>@medicine.Tax</td>
                        <td>@(medicine.IsAvailable ? "Yes" : "No")</td>
                        <td>@medicine.Price</td>
                        <td>
                            <a href="@Url.Action("Edit", "Pharmacist", new { id = medicine.MedicineId})" class="btn btn-primary" style="background-color: #007bff; color: #fff; border: 1px solid #007bff; text-decoration: none;">Edit</a>
                            <a href="@Url.Action("Delete", "Pharmacist", new { id = medicine.MedicineId })" class="btn btn-primary" style="background-color: #007bff; color: #fff; border: 1px solid #007bff; text-decoration: none;">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        </div>
    </div>
<script src="~/Content/SearchScript.js"></script>