
@model DALLibrary.Domain_Classes.Medicine

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout_Pharmacist.cshtml";
}

<div style="font-family: 'Arial', sans-serif; background-color: #f4f4f4; margin: 0; padding: 20px;">
    <div style="display: flex; flex-wrap: wrap; justify-content: space-between;">
        <h3>Are you sure you want to delete this?</h3>
        <div>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.MedicineName)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.MedicineName)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Price)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Price)
                </dd>
            </dl>
            @using (Html.BeginForm("Delete", "Pharmacist", FormMethod.Post))
            {
                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <a href="@Url.Action("Index", "Pharmacist")" class="btn btn-secondary ml-2">Cancel</a>
                </div>
            

            }
        </div>


    </div>
</div>